.cat-list 
  background: #1E824C;
  border-radius: 3px 0 0 3px;
  color: #eaeaea;
  display: inline-block;
  height: 26px;
  line-height: 26px;
  padding: 0 20px 0 23px;
  position: relative;
  margin: 0 -5px 10px 20px
  text-decoration: none;
  -webkit-transition: color 0.2s;


.cat-list::before 
  background: #eaeaea;
  border-radius: 10px;
  box-shadow: inset 0 1px rgba(0, 0, 0, 0.25);
  content: '';
  height: 6px;
  left: 10px;
  position: absolute;
  width: 6px;
  top: 10px;

.cat-list:hover 
  background-color: #1E824C;
  opacity 0.8
  color: white;


.cat-list:hover::after 
   border-left-color: #2AA4CF; 

  
