extends layout

block content
	.login-wrapper
		.container-fluid
			.row
				.col-md-12.main-container
					.col-md-6.left-div
						img(src="/img/login.jpg")
					.col-md-6.right-div
						h1 Welcome to Code Like Ninja
						h3 Login to your Writer Account
						.login-box
							form(action='/writer/login', method='POST')
								input(type='text', name='username', placeholder='Enter your username',required, autofocus)
								br
								br
								input(type='password', name='password', placeholder='Enter password', required)
								br
								br
								button(type='submit',class="login-btn") Login
								span.clearfix
						#message
							if message
								h3.error-message #{message}