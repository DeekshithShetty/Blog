extends layout

block header
  h1 Welcome to Admin Page - Modify Editor
block content
  
  div(class="container sections-wrapper")
    div(class="row")
      div(class="primary col-md-12")
        .header
          .col-md-9
            form(action='/admin/home', method='get')
              input(type="submit", class="home-btn", value="<<Home")
          .col-md-3  
            form(action='/admin/signout', method='get')
              input(type="submit", class="logout-btn", value="Logout")
        h1 Welcome to Code Like Ninja Admin Page

        div(class="col-md-12 col-sm-12 col-xs-12")
          ul(class="flex-container")
            div(class="alert alert-info col-md-12 col-sm-12 col-xs-12 alert-box", id="editor-alert-box1")
              a(href="#", class="close", data-dismiss="alert", aria-label="close") &times;
              p The editor has been deleted

            script.
              if(!{editor_deleted} == true)
                document.getElementById("editor-alert-box1").style.display = "block";

        section(class="section")
          h2.admin Delete an Editor
          div(class="section-inner")
            form(role="form", method="post", action="/admin/del_editor")
              div(class="form-group")
                label(for="editor_name") Editor Name
                input(type="text", class="form-control", name="editor_name" id="editor_name", placeholder="Name")
              button(type="submit", class="btn btn-success") Delete


        div(class="col-md-12 col-sm-12 col-xs-12")
          ul(class="flex-container")
            div(class="alert alert-info col-md-12 col-sm-12 col-xs-12 alert-box", id="editor-alert-box2")
              a(href="#", class="close", data-dismiss="alert", aria-label="close") &times;
              p The editor has been updated

            script.
              if(!{editor_updated} == true)
                document.getElementById("editor-alert-box2").style.display = "block";      
              
        section(class="section")
          h2.admin Update Editor
          div(class="section-inner")
            form(role="form", method="post", action="/admin/upd_editor")
              div(class="form-group")
                label(for="editor_name") Editor Name
                input(type="text", class="form-control",name="editor_name", id="editor_name", placeholder="Name")
              div(class="form-group")
                label(for="editor_descr") Description
                textarea(rows="8", class="form-control",name="editor_descr", id="editor_descr",placeholder="Enter the HTML snippet here")  
              div(class="form-group")
                label(for="editor_twitter") Twitter link
                input(type="text", class="form-control",name="editor_twitter", id="editor_twitter", placeholder="Twitter link")

              button(type="submit", class="btn btn-success") Update