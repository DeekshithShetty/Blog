extends layout

block content
  
  div(class="container sections-wrapper")
    div(class="row")
      div(class="primary col-md-12")
        h1 Welcome to 忍者コーダー Admin Page

        div(class="col-md-12 col-sm-12 col-xs-12 main-container")
          ul(class="flex-container")
            div(class="alert alert-info col-md-12 col-sm-12 col-xs-12 alert-box", id="post-alert-box1")
              a(href="#", class="close", data-dismiss="alert", aria-label="close") &times;
              p The post has been deleted

            script.
              if(!{post_deleted} == true)
                document.getElementById("post-alert-box1").style.display = "block";

        section(class="section")
          h2.admin Delete Post
          div(class="section-inner")
            form(role="form", method="post", action="/admin/del_post")
              div(class="form-group")
                label(for="post_title") Post Title
                input(type="text", class="form-control", id="post_title", placeholder="Title")
              button(type="submit", class="btn btn-success") Delete
              
        div(class="col-md-12 col-sm-12 col-xs-12 main-container")
          ul(class="flex-container")
            div(class="alert alert-info col-md-12 col-sm-12 col-xs-12 alert-box", id="post-alert-box2")
              a(href="#", class="close", data-dismiss="alert", aria-label="close") &times;
              p The post has been updated

            script.
              if(!{post_updated} == true)
                document.getElementById("post-alert-box2").style.display = "block";


        section(class="section")
          h2.admin Update Post
          div(class="section-inner")
            form(role="form", method="post", action="/admin/upd_post")
              div(class="form-group")
                label(for="post_title") Post Title
                input(type="text", class="form-control", id="post_title", placeholder="Title")
              div(class="form-group")
                label(for="post_descr") Description
                textarea(rows="10", class="form-control", id="post_descr", placeholder="Description")  
              div(class="form-group")
                label(for="post_author") Author
                input(type="text", class="form-control", id="post_author", placeholder="Author")
              div(class="form-group")
                label(for="post_category") Category
                input(type="text", class="form-control", id="post_category", placeholder="Category")    
              div(class="form-group")
                label(for="post_tags") Tags
                input(type="text", class="form-control", id="post_tags", placeholder="Tags")

              button(type="submit", class="btn btn-success") Update