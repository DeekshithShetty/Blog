extends layout

block content
  .row
    div(class="col-md-9 col-sm-12 col-xs-12 main-container")
      ul(class="flex-container")
        - for(var i=0 ; i< posts.length ; i++) {
            article(class="flex-item col-md-12 col-sm-12 col-xs-12")
              a(class="col-md-12 post-title-link" href="/post/"+posts[i].title)
                h2(class="post-title")= posts[i].title
              ul(class="list-inline subhead col-md-12")
                li
                  ul(class="list-inline")
                    li
                      img(src="/img/comment.png") 
                    li= "30 Comments"
                li
                  ul(class="list-inline")
                    li
                      img(src="/img/clock.png") 
                    li
                      p JUNE 12, 2015
                li
                  ul(class="list-inline")
                    li
                      img(src="/img/author.png") 
                    li= posts[i].author_name
              .post-social-icons
                ul(class="list-inline")
                  li
                    a(class="twitter-share-button", href="https://twitter.com/intent/tweet?text=Check%20this%20out- " + posts[i].title, data-size="default") Tweet
                  li
                    div(class="g-plusone",data-href="https://www.google.co.in", data-annotation="bubble",data-size="medium", style="width:70px; overflow:hidden; top:-1px;")
                  li
                    div(class="fb-share-button", data-href="https://www.google.co.in", data-layout="button_count", style="width:auto; overflow:hidden; top:-1px;")
                  

                  //div(class="share")  
                    a(class="twitter-share-button", href="https://twitter.com/intent/tweet?text=Check%20this%20out- " + posts[i].title, data-size="default") Tweet

                    div(class="g-plusone",data-href="https://www.google.co.in", data-annotation="bubble",data-size="medium")

                    div(class="fb-share-button", data-href="https://www.google.co.in", data-layout="button_count", style="width:97px; overflow:hidden; top:-1px;")
                  
                  
                                     
              .post-body.col-md-12
                .pic.col-md-4
                .post-content.col-md-8
                  span= posts[i].body
                  .readmore 
                    a(href="/post/"+posts[i].title) Read more ⬈
              br
              h4(class="col-md-12") Tagged with :
              .tag-body.tags.col-md-12
                - for(var j=0 ; j< posts[i].tags.length ; j++) {
                  li
                    a(href="/tag/" + posts[i].tags[j], class="tag")= posts[i].tags[j]
                - };       
        - };
        div(id="pager", class="text-center")

        script(type="text/javascript", src="/js/jquery.bootpag.min.js")
        script.
          var numb = !{pnum};
          $('#pager').bootpag({
            total: !{totPages},
            //firstLastUse: true,
            //leaps: true, 
            page : numb,
            maxVisible : 5,
            //next : '',
            //prev : '',
            //first: '←',
            //last: '→',
            /*wrapClass: 'pagination',
            activeClass: 'active',
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first',*/
            //href: "/home/{{number}}",
          }).on("page", function(event, /* page number here */ num) {
              window.location.assign("/home/"+num);
          });

    div(class="col-md-3 col-sm-12 col-xs-12 aside-container")
      .connect
        .heading
          h4 Connect With Us
        .social-ico
          ul(class="list-inline")
            li
              img(src="/img/twitter.png")
            li
              img(src="/img/google.png")
            li
              img(src="/img/git.png")
            li
              img(src="/img/facebook.png")
            li
              img(src="/img/lin.png")
            li
              img(src="/img/em.png")

        .subscribe
          div(class="section-inner text-center")  
            h5 Subscribe - We dont spam
              div(class="form-group email-box")
                form(action='/contact', name='contactus', id='contactus', method='post')
                  input(type=text, class="form-control email", id=email, placeholder="Email")
                  input(type="submit", class="mycustom-btn", value="Subscribe") 

      .facebook
        .heading
          h4 Find us on Facebook 
        .plugin          
          div(class="fb-page", data-href="https://www.facebook.com/GameOfThrones", data-small-header="false", data-adapt-container-width="true", data-hide-cover="false", data-show-facepile="true", data-show-posts="false")
            div(class="fb-xfbml-parse-ignore")
              blockquote(cite="https://www.facebook.com/GameOfThrones")
                a(href="https://www.facebook.com/facebook") GameOfThrones  

      .category
        .heading
          h4 Category
        .list
          ul(class="categories")
            - for(var i=0 ; i< categories.length ; i++) {
                ul(class="list-inline")
                  li
                    a(href="/categories/" + categories[i]._id, class="cat-list")= categories[i]._id
                  li(class="tag-count")= categories[i].count  
            - };         
              
      .tagbox
        .heading
          h4 Tags
        .tags
          ul(class="tags")
            - for(var i=0 ; i< tags.length ; i++) {
                ul(class="list-inline")
                  li
                    a(href="/tags/" + tags[i]._id, class="tag")= tags[i]._id
                  li(class="tag-count")= tags[i].count   
            - };

      .hotPostsbox
        .heading
          h4 Hot posts
        .hotPosts
          - for(var i=0 ; i< hot_posts.length ; i++) {
              ul(class="hot_links")
                li
                  span ↠
                  a(href="/post/" + hot_posts[i].title, class="hot-post-links")= hot_posts[i].title + " is the best in the world"
          - };            
