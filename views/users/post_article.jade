extends layout

block content
  .row
    div(class="col-md-9 col-sm-12 col-xs-12 main-container")
      ul(class="flex-container")
        article(class="flex-item col-md-12")
          h2.main-titles= post_title
          ul(class="list-inline subhead col-md-12")
            li
              ul(class="list-inline")
                li
                  img(src="/img/comment.png") 
                li= "30 Comments"
            li
              ul(class="list-inline")
                li
                  img(src="/img/clock.png") 
                li
                  p JUNE 12, 2015
            li
              ul(class="list-inline")
                li
                  img(src="/img/author.png") 
                li= author_name

          .post-social-icons.col-md-12.subhead
                ul(class="list-inline share")      
                  //li
                    a(class="twitter-share-button", href="https://twitter.com/intent/tweet?text=Check%20this%20out- " + posts[3].title, data-size="default") Tweet
                  li
                    div(class="g-plusone",data-href="https://www.google.co.in", data-annotation="bubble",data-size="medium")
                  li
                    div(class="fb-like", data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count", data-action="like", data-show-faces="true", data-share="false", data-width="450", style="width:87px; overflow:hidden; top:-1px; left: 0px;")
                  li
                    div(class="fb-share-button", data-href="https://www.google.co.in", data-layout="button_count", data-width="450", style="width:97px; overflow:hidden; top:-1px; left: 0px;")

          br
          h4(class="col-md-12") Tagged with :
          .tag-body.tags.col-md-12
            - for(var j=0 ; j< 4 ; j++) {
                li
                  a(href="/tag/" + "tag1", class="tag")= "tag1"
            - };           
                                 
          .post-body.col-md-12
            .pic2.col-md-12
            .post-content.col-md-12
              p= post_body

        article(class="flex-item col-md-12 col-sm-12 col-xs-12")
          div(class="disqus", id="disqus_thread")      


    div(class="secondary col-md-3 col-sm-12 col-xs-12 aside-container")
      .connect
        .heading
          h4 Connect With Us
        .social-ico
          ul(class="list-inline")
            li
              img(src="/img/twitter.png")
            li
              img(src="/img/google.png")
            li
              img(src="/img/git.png")
            li
              img(src="/img/facebook.png")
            li
              img(src="/img/lin.png")
            li
              img(src="/img/em.png")

        .subscribe
          div(class="section-inner text-center")  
            h5 Subscribe - We dont spam
              div(class="form-group email-box")
                input(type=text, class="form-control email", id=email, placeholder="Email")
                button(type=submit, class="mycustom-btn") Subscribe
              
